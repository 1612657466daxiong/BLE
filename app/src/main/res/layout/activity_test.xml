<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="infoex.cn.opxbluetoothpro.TestActivity">
    <include android:id="@+id/title" layout="@layout/item_title"
        ></include>
    <LinearLayout
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>


    </LinearLayout>
<RadioGroup
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/group_control"
    android:layout_alignParentBottom="true">
    <RadioButton
        android:id="@+id/start"
        android:height="40dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@drawable/text_color_control"
        android:background="@drawable/btn_background_control"
        android:button="@null"
        android:text="开始"/>
    <RadioButton
        android:id="@+id/stop"
        android:height="40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@null"
        android:textColor="@drawable/text_color_control"
        android:background="@drawable/btn_background_control"
        android:text="停止"/>
    <RadioButton
        android:id="@+id/full"
        android:height="40dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@null"
        android:gravity="center"
        android:textColor="@drawable/text_color_control"
        android:background="@drawable/btn_background_control"
        android:text="放空"/>
</RadioGroup>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/group_control"
        android:background="#59afff">

    </View>
</RelativeLayout>
